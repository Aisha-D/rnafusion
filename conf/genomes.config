/*
 * -------------------------------------------------
 *  Nextflow config file for custom genomes
 * -------------------------------------------------
 * These references have to be build manually due
 * to ERCC spike-ins.
 * Can be used by any config that customizes the base
 * path using $params.genomes_base / --genomes_base
 */

 params {
  genomes {
    'GRCh38' {
      fasta         = "${params.genomes_base}/Homo_sapiens.GRCh38.all.fa"
      gtf           = "${params.genomes_base}/Homo_sapiens.GRCh38.chr.gtf"
      transcript    = "${params.genomes_base}/Homo_sapiens.GRCh38.cdna.all.fa.gz"
      star          = "${params.genomes_base}/star"
      arriba        = "${params.genomes_base}/arriba"
      ericscript    = "${params.genomes_base}/ericscript"
      fusioncatcher = "${params.genomes_base}/fusioncatcher"
      pizzly        = "${params.genomes_base}/pizzly"
      starfusion    = "${params.genomes_base}/starfusion"
    }
  }
}
